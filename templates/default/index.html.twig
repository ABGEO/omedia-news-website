{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News!</h1>

    {% for news in news %}
        <article>
            <h1><a href="{{ path('single_news', {'id': news.id}) }}">{{ news.title }}</a></h1>

            <h2>{{ news.subTitle }}</h2>
            <p>{{ news.tags }}</p>

            <div>
                {{ news.body }}
            </div>

            <br>
            <a href="{{ path('single_news', {'id': news.id}) }}">Read More -></a>
            <hr>
        </article>
    {% endfor %}
{% endblock %}
