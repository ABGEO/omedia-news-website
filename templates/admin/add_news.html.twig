{% extends 'admin/layout.html.twig' %}

{% block admin_content %}
    <h2>Add News</h2>

    <form name="addNews" method="post" action="{{ path('admin_save_news', {'id': 0}) }}" enctype="multipart/form-data">
        <input type="hidden" name="token" value="{{ csrf_token('add-news') }}" />

        <label>
            Title:<br>
            <input type="text" name="title">
        </label>

        <br><br>

        <label>
            Sub-Title:<br>
            <input type="text" name="subTitle">
        </label>

        <br><br>

        <label>
            Tags:<br>
            <input type="text" name="tags">
        </label>

        <br><br>

        <label>
            Text:<br>
            <textarea name="body"></textarea>
        </label>

        <br><br>

        <label>
            Image:<br>
            <input type="file" name="image">
        </label>

        <br><br>

        <input type="submit" value="Add">
    </form>
{% endblock %}